{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["playwright"],
    "skipLibCheck": true,
    "noEmit": true
  },

  "include": ["test/e2e/**/*"],

  "exclude": [
    "**/backend/**",
    "**/frontend/**",
    "**/*.spec.ts",
    "node_modules"
  ]
}